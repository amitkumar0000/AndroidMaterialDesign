<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ActivityTransitionActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="193dp"
            app:srcCompat="@drawable/cat"
            android:id="@+id/catImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="284dp"
            android:transitionName="profile"
            android:onClick="onClick"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/catText"
            android:layout_marginEnd="48dp"/>
    <TextView
            android:text="CAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="catprofile"

            android:id="@+id/catText" android:layout_marginTop="75dp"
            app:layout_constraintStart_toEndOf="@+id/catImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/catImage" android:layout_marginEnd="82dp"
    />


</android.support.constraint.ConstraintLayout>