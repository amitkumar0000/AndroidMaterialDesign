<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ViewAnimationActivity">

    <Button
            android:text="Translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/move"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="ZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zoomIn"
            android:onClick="onClick"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/move"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Fade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/fade" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/zoomIn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/rotate" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/fade"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="zoomout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/zoomout" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/zoomIn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/together" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rotate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>